<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YogaCustomerApp.BookedClassPage"
             Title="Booked Class"
             NavigationPage.HasBackButton="False">
    <VerticalStackLayout>
        <Label 
            Text="{Binding userEmail}"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding UserBookings}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Margin="5" Padding="10" CornerRadius="10">
                        <VerticalStackLayout>
                            <Label Text="{Binding Course.type}" FontAttributes="Bold" FontSize="18"/>
                            <Label Text="{Binding Schedule.date, StringFormat='Date: {0}'}"/>
                            <Label Text="{Binding Course.time, StringFormat='Time: {0}'}"/>
                            <Label Text="{Binding Schedule.teacher, StringFormat='Teacher: {0}'}"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button 
            Text="All Classes"
            BackgroundColor="DarkSlateBlue"
            TextColor="White"
            Clicked="OnBackToClassesClicked"
            HorizontalOptions="Center"
            Margin="10"/>
    </VerticalStackLayout>
</ContentPage>